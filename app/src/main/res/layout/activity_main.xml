<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/malam"
        android:backgroundTint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_modemalam" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@id/malam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_telegram" />

    <TextView
        android:id="@+id/telegramtaxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telegram"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/logo"
        android:fontFamily="@font/poppinssemibold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/telegramtaxt"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/poppinsregular"
        android:text="Aplikasi pesan instan tercepat."
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:fontFamily="@font/poppinsregular"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Telegram gratis dan aman."
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="161dp"
        android:text="Continue in English"
        android:textColor="#27A6E6"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="357dp"
        android:layout_height="69dp"
        android:layout_below="@id/text2"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/biru"
        android:text="Mulai Percakapan"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>